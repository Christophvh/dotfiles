{
  "editor.formatOnType": true,
  "explorer.openEditors.visible": 0,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.fontLigatures": true,
  "editor.fontFamily": "Cascadia Code",
  "editor.fontWeight": "bold",
  "editor.fontSize": 12,
  "editor.lineHeight": 23,
  "editor.lineNumbers": "on",
  "workbench.editor.showTabs": "single",
  "workbench.tree.renderIndentGuides": "none",
  "editor.detectIndentation": false,
  //Disable basic php support
  "php.suggest.basic": false,
  // VIM
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.leader": ",",
  "vim.surround": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["leader", "<space>"],
      "commands": [":nohl"]
    },
    {
      "before": ["leader", "u"],
      "commands": ["namespaceResolver.import"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  //Git lens plugin
  "gitlens.blame.heatmap.enabled": false,
  "gitlens.blame.highlight.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.mode.statusBar.enabled": false,
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "newUntitledFile",
  //Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "blade": "html",
    "postcss": "css"
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "simple-php-cs-fixer.useConfig": true,
  "simple-php-cs-fixer.config": ".php-cs-fixer.php",
  "simple-php-cs-fixer.save": true,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "selection",
  "php-docblocker.qualifyClassNames": true,
  "php-docblocker.returnGap": true,
  "php-docblocker.useShortNames": true,
  "vim.vimrc.enable": false,
  "workbench.colorTheme": "Palenight Operator",
  "gitProjectManager.openInNewWindow": true,
  "prettier.useTabs": false,
  // "prettier.disableLanguages": ["markdown", "md", "PHP", "yaml", "twig", "blade", "graphql"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.codeActionsOnSave.mode": "problems",
  "editor.wordWrapColumn": 100,
  "files.associations": {
    ".blade.php": "html",
    ".tpl": "html",
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "html": "HTML",
    "typescriptreact": "html"
  },
  "prettier.printWidth": 100,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 4,
  "editor.cursorStyle": "line",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "[php]": {},
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.guides.indentation": false,
  "editor.bracketPairColorization.enabled": false,
  "[blade]": {
    "editor.defaultFormatter": "shufo.vscode-blade-formatter"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "bladeFormatter.format.wrapAttributes": "preserve",
  "editor.inlineSuggest.enabled": true,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "tailwindCSS.emmetCompletions": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.codeActionsOnSave.rules": null,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "workbench.activityBar.location": "hidden",
  "github.copilot.editor.enableAutoCompletions": true
  // "php-cs-fixer.executablePath": "/Users/christophvanhees/.composer/vendor/bin/php-cs-fixer",
}

